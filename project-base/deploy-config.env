# Configuración para despliegue en producción
APP_ENV=prod
APP_DEBUG=false
APP_SECRET=your-secret-key-here-change-this-in-production

# Base de datos - Configurar según el hosting
DATABASE_URL="mysql://username:password@host:port/database_name"
# Para PostgreSQL: DATABASE_URL="postgresql://username:password@host:port/database_name"

# Redis (opcional)
REDIS_URL="redis://localhost:6379"

# Mailer (opcional)
MAILER_DSN=smtp://localhost:1025

# Configuración de dominios
DOMAIN_URLS="https://your-domain.com"

# Configuración de archivos
UPLOAD_DIR="/var/www/html/web/uploads"
