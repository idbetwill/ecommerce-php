{% extends 'base.html.twig' %}

{% block title %}Ver Producto Personalizado{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">Detalles del Producto Personalizado</h3>
                    <div>
                        <a href="{{ path('admin_custom_product_edit', {'id': custom_product.id}) }}" 
                           class="btn btn-warning">
                            <i class="fas fa-edit"></i> Editar
                        </a>
                        <a href="{{ path('admin_custom_product_index') }}" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Volver
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <th width="30%">ID:</th>
                                    <td>{{ custom_product.id }}</td>
                                </tr>
                                <tr>
                                    <th>Nombre:</th>
                                    <td>{{ custom_product.name }}</td>
                                </tr>
                                <tr>
                                    <th>SKU:</th>
                                    <td>{{ custom_product.sku ?? '-' }}</td>
                                </tr>
                                <tr>
                                    <th>Precio:</th>
                                    <td>${{ custom_product.price }}</td>
                                </tr>
                                <tr>
                                    <th>Estado:</th>
                                    <td>
                                        {% if custom_product.isActive %}
                                            <span class="badge bg-success">Activo</span>
                                        {% else %}
                                            <span class="badge bg-secondary">Inactivo</span>
                                        {% endif %}
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <th width="30%">Creado:</th>
                                    <td>{{ custom_product.createdAt|date('d/m/Y H:i:s') }}</td>
                                </tr>
                                <tr>
                                    <th>Actualizado:</th>
                                    <td>{{ custom_product.updatedAt|date('d/m/Y H:i:s') }}</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    
                    {% if custom_product.description %}
                        <div class="mt-4">
                            <h5>Descripción:</h5>
                            <div class="border p-3 rounded">
                                {{ custom_product.description|nl2br }}
                            </div>
                        </div>
                    {% endif %}
                    
                    <div class="mt-4">
                        <form method="post" action="{{ path('admin_custom_product_delete', {'id': custom_product.id}) }}" 
                              onsubmit="return confirm('¿Está seguro de que desea eliminar este producto?');" 
                              style="display: inline;">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ custom_product.id) }}">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Eliminar Producto
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
