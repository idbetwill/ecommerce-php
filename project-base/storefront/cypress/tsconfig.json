{
    "compilerOptions": {
        "target": "es5",
        "lib": ["es5", "dom"],
        "types": ["cypress", "node", "cypress-visual-regression", "cypress-real-events"],
        "baseUrl": ".",
        "paths": {
            "../../config/*": ["../../config/*.ts"]
        },
        "skipLibCheck": true,
        "strict": true,
        "jsx": "preserve",
        "forceConsistentCasingInFileNames": true,
        "incremental": true,
        "esModuleInterop": true
    },
    "include": [
        "**/*.ts",
        "**/*.cy.ts",
        "../../graphql/types.ts",
        "../../graphql/**/*.generated.*",
        "../../config/*.ts"
    ]
}
