{% extends 'base.html.twig' %}

{% block title %}Nuevo Producto{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>Nuevo Producto</h1>
                <a href="{{ path('admin_product_index') }}" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Volver al Listado
                </a>
            </div>

            <div class="card">
                <div class="card-body">
                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': true}}) }}
                        <div class="row">
                            <div class="col-md-8">
                                <h5 class="mb-3">Información Básica</h5>
                                
                                <div class="row">
                                    <div class="col-md-8">
                                        {{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                    <div class="col-md-4">
                                        {{ form_row(form.sku, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-4">
                                        {{ form_row(form.weight, {'attr': {'class': 'form-control', 'step': '0.001'}}) }}
                                    </div>
                                    <div class="col-md-4">
                                        {{ form_row(form.dimensions, {'attr': {'class': 'form-control', 'placeholder': 'L x W x H'}}) }}
                                    </div>
                                    <div class="col-md-4">
                                        {{ form_row(form.manufacturer, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        {{ form_row(form.warrantyPeriod, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                    <div class="col-md-6 d-flex align-items-end">
                                        <div class="form-check form-switch">
                                            {{ form_widget(form.isFeatured, {'attr': {'class': 'form-check-input'}}) }}
                                            {{ form_label(form.isFeatured, null, {'label_attr': {'class': 'form-check-label'}}) }}
                                        </div>
                                    </div>
                                </div>

                                <h5 class="mb-3 mt-4">SEO</h5>
                                
                                {{ form_row(form.metaTitle, {'attr': {'class': 'form-control'}}) }}
                                {{ form_row(form.metaDescription, {'attr': {'class': 'form-control'}}) }}
                                {{ form_row(form.metaKeywords, {'attr': {'class': 'form-control'}}) }}
                            </div>

                            <div class="col-md-4">
                                <h5 class="mb-3">Categorías</h5>
                                
                                {% if form.customCategories.vars.choices|length > 0 %}
                                    <div class="border rounded p-3">
                                        {{ form_widget(form.customCategories, {'attr': {'class': 'form-check'}}) }}
                                    </div>
                                {% else %}
                                    <div class="alert alert-info">
                                        <i class="fas fa-info-circle"></i>
                                        No hay categorías disponibles. 
                                        <a href="{{ path('admin_category_new') }}" class="alert-link">Crear categoría</a>
                                    </div>
                                {% endif %}

                                <div class="mt-4">
                                    {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary w-100'}}) }}
                                </div>
                            </div>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>

<script>
// Validación del formulario
(function() {
    'use strict';
    window.addEventListener('load', function() {
        var forms = document.getElementsByClassName('needs-validation');
        var validation = Array.prototype.filter.call(forms, function(form) {
            form.addEventListener('submit', function(event) {
                if (form.checkValidity() === false) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        });
    }, false);
})();
</script>
{% endblock %}
