{% extends 'base.html.twig' %}

{% block title %}Gestión de Productos{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>Gestión de Productos</h1>
                <a href="{{ path('admin_product_new') }}" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Nuevo Producto
                </a>
            </div>

            <!-- Filtros -->
            <div class="card mb-4">
                <div class="card-body">
                    <form method="GET" class="row g-3">
                        <div class="col-md-4">
                            <label for="search" class="form-label">Buscar</label>
                            <input type="text" class="form-control" id="search" name="search" 
                                   value="{{ search }}" placeholder="Nombre o SKU del producto">
                        </div>
                        <div class="col-md-4">
                            <label for="category" class="form-label">Categoría</label>
                            <select class="form-select" id="category" name="category">
                                <option value="">Todas las categorías</option>
                                {% for category in categories %}
                                    <option value="{{ category.id }}" 
                                            {{ selectedCategory == category.id ? 'selected' : '' }}>
                                        {{ category.name }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-md-4 d-flex align-items-end">
                            <button type="submit" class="btn btn-outline-primary me-2">
                                <i class="fas fa-search"></i> Filtrar
                            </button>
                            <a href="{{ path('admin_product_index') }}" class="btn btn-outline-secondary">
                                <i class="fas fa-times"></i> Limpiar
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Lista de productos -->
            <div class="card">
                <div class="card-body">
                    {% if products|length > 0 %}
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Nombre</th>
                                        <th>SKU</th>
                                        <th>Fabricante</th>
                                        <th>Categorías</th>
                                        <th>Destacado</th>
                                        <th>Creado</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for product in products %}
                                        <tr>
                                            <td>{{ product.id }}</td>
                                            <td>
                                                <strong>{{ product.name }}</strong>
                                                {% if product.description %}
                                                    <br><small class="text-muted">{{ product.description|slice(0, 100) }}{% if product.description|length > 100 %}...{% endif %}</small>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if product.sku %}
                                                    <span class="badge bg-secondary">{{ product.sku }}</span>
                                                {% else %}
                                                    <span class="text-muted">-</span>
                                                {% endif %}
                                            </td>
                                            <td>{{ product.manufacturer ?? '-' }}</td>
                                            <td>
                                                {% if product.customCategories|length > 0 %}
                                                    {% for category in product.customCategories %}
                                                        <span class="badge bg-info me-1">{{ category.name }}</span>
                                                    {% endfor %}
                                                {% else %}
                                                    <span class="text-muted">-</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if product.isFeatured %}
                                                    <span class="badge bg-warning">Destacado</span>
                                                {% else %}
                                                    <span class="text-muted">-</span>
                                                {% endif %}
                                            </td>
                                            <td>{{ product.createdAt|date('d/m/Y H:i') }}</td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="{{ path('admin_product_show', {'id': product.id}) }}" 
                                                       class="btn btn-sm btn-outline-info" title="Ver">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a href="{{ path('admin_product_edit', {'id': product.id}) }}" 
                                                       class="btn btn-sm btn-outline-primary" title="Editar">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <form method="POST" action="{{ path('admin_product_toggle_featured', {'id': product.id}) }}" 
                                                          class="d-inline" onsubmit="return confirm('¿Cambiar estado destacado?')">
                                                        <button type="submit" class="btn btn-sm btn-outline-warning" title="Toggle Destacado">
                                                            <i class="fas fa-star"></i>
                                                        </button>
                                                    </form>
                                                    <form method="POST" action="{{ path('admin_product_delete', {'id': product.id}) }}" 
                                                          class="d-inline" onsubmit="return confirm('¿Estás seguro de eliminar este producto?')">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                                                        <button type="submit" class="btn btn-sm btn-outline-danger" title="Eliminar">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>

                        <!-- Paginación -->
                        {% if totalPages > 1 %}
                            <nav aria-label="Paginación de productos">
                                <ul class="pagination justify-content-center">
                                    {% if currentPage > 1 %}
                                        <li class="page-item">
                                            <a class="page-link" href="{{ path('admin_product_index', {'page': currentPage - 1, 'search': search, 'category': selectedCategory}) }}">
                                                Anterior
                                            </a>
                                        </li>
                                    {% endif %}
                                    
                                    {% for page in 1..totalPages %}
                                        <li class="page-item {{ page == currentPage ? 'active' : '' }}">
                                            <a class="page-link" href="{{ path('admin_product_index', {'page': page, 'search': search, 'category': selectedCategory}) }}">
                                                {{ page }}
                                            </a>
                                        </li>
                                    {% endfor %}
                                    
                                    {% if currentPage < totalPages %}
                                        <li class="page-item">
                                            <a class="page-link" href="{{ path('admin_product_index', {'page': currentPage + 1, 'search': search, 'category': selectedCategory}) }}">
                                                Siguiente
                                            </a>
                                        </li>
                                    {% endif %}
                                </ul>
                            </nav>
                        {% endif %}
                    {% else %}
                        <div class="text-center py-5">
                            <i class="fas fa-box-open fa-3x text-muted mb-3"></i>
                            <h4 class="text-muted">No se encontraron productos</h4>
                            <p class="text-muted">Comienza creando tu primer producto.</p>
                            <a href="{{ path('admin_product_new') }}" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Crear Producto
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
