{% extends 'base.html.twig' %}

{% block title %}Producto - {{ product.name }}{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>{{ product.name }}</h1>
                <div>
                    <a href="{{ path('admin_product_edit', {'id': product.id}) }}" class="btn btn-primary me-2">
                        <i class="fas fa-edit"></i> Editar
                    </a>
                    <a href="{{ path('admin_product_index') }}" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Volver al Listado
                    </a>
                </div>
            </div>

            <div class="row">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">Información del Producto</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <h6>Información Básica</h6>
                                    <table class="table table-sm">
                                        <tr>
                                            <td><strong>ID:</strong></td>
                                            <td>{{ product.id }}</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Nombre:</strong></td>
                                            <td>{{ product.name }}</td>
                                        </tr>
                                        <tr>
                                            <td><strong>SKU:</strong></td>
                                            <td>
                                                {% if product.sku %}
                                                    <span class="badge bg-secondary">{{ product.sku }}</span>
                                                {% else %}
                                                    <span class="text-muted">No especificado</span>
                                                {% endif %}
                                            </td>
                                        </tr>
                                        <tr>
                                            <td><strong>Fabricante:</strong></td>
                                            <td>{{ product.manufacturer ?? 'No especificado' }}</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Peso:</strong></td>
                                            <td>
                                                {% if product.weight %}
                                                    {{ product.weight }} kg
                                                {% else %}
                                                    <span class="text-muted">No especificado</span>
                                                {% endif %}
                                            </td>
                                        </tr>
                                        <tr>
                                            <td><strong>Dimensiones:</strong></td>
                                            <td>{{ product.dimensions ?? 'No especificadas' }}</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Garantía:</strong></td>
                                            <td>
                                                {% if product.warrantyPeriod %}
                                                    {{ product.warrantyPeriod }} meses
                                                {% else %}
                                                    <span class="text-muted">No especificada</span>
                                                {% endif %}
                                            </td>
                                        </tr>
                                        <tr>
                                            <td><strong>Destacado:</strong></td>
                                            <td>
                                                {% if product.isFeatured %}
                                                    <span class="badge bg-warning">Sí</span>
                                                {% else %}
                                                    <span class="badge bg-secondary">No</span>
                                                {% endif %}
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                                <div class="col-md-6">
                                    <h6>Fechas</h6>
                                    <table class="table table-sm">
                                        <tr>
                                            <td><strong>Creado:</strong></td>
                                            <td>{{ product.createdAt|date('d/m/Y H:i') }}</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Actualizado:</strong></td>
                                            <td>{{ product.updatedAt|date('d/m/Y H:i') }}</td>
                                        </tr>
                                    </table>

                                    {% if product.customCategories|length > 0 %}
                                        <h6>Categorías</h6>
                                        <div class="mb-3">
                                            {% for category in product.customCategories %}
                                                <span class="badge bg-info me-1 mb-1">{{ category.name }}</span>
                                            {% endfor %}
                                        </div>
                                    {% endif %}
                                </div>
                            </div>

                            {% if product.description %}
                                <h6>Descripción</h6>
                                <p class="text-muted">{{ product.description }}</p>
                            {% endif %}
                        </div>
                    </div>

                    {% if product.metaTitle or product.metaDescription or product.metaKeywords %}
                        <div class="card mt-4">
                            <div class="card-header">
                                <h5 class="mb-0">Información SEO</h5>
                            </div>
                            <div class="card-body">
                                {% if product.metaTitle %}
                                    <h6>Meta Título</h6>
                                    <p class="text-muted">{{ product.metaTitle }}</p>
                                {% endif %}

                                {% if product.metaDescription %}
                                    <h6>Meta Descripción</h6>
                                    <p class="text-muted">{{ product.metaDescription }}</p>
                                {% endif %}

                                {% if product.metaKeywords %}
                                    <h6>Meta Keywords</h6>
                                    <p class="text-muted">{{ product.metaKeywords }}</p>
                                {% endif %}
                            </div>
                        </div>
                    {% endif %}
                </div>

                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">Acciones</h5>
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-2">
                                <a href="{{ path('admin_product_edit', {'id': product.id}) }}" class="btn btn-primary">
                                    <i class="fas fa-edit"></i> Editar Producto
                                </a>
                                
                                <form method="POST" action="{{ path('admin_product_toggle_featured', {'id': product.id}) }}" 
                                      onsubmit="return confirm('¿Cambiar estado destacado?')">
                                    <button type="submit" class="btn btn-warning w-100">
                                        <i class="fas fa-star"></i> 
                                        {% if product.isFeatured %}
                                            Quitar de Destacados
                                        {% else %}
                                            Marcar como Destacado
                                        {% endif %}
                                    </button>
                                </form>

                                <a href="{{ path('admin_product_index') }}" class="btn btn-outline-secondary">
                                    <i class="fas fa-list"></i> Ver Todos los Productos
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="card mt-3">
                        <div class="card-header">
                            <h5 class="mb-0">Eliminar Producto</h5>
                        </div>
                        <div class="card-body">
                            <p class="text-muted small">
                                Esta acción no se puede deshacer. El producto será eliminado permanentemente.
                            </p>
                            <form method="POST" action="{{ path('admin_product_delete', {'id': product.id}) }}" 
                                  onsubmit="return confirm('¿Estás seguro de eliminar este producto? Esta acción no se puede deshacer.')">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                                <button type="submit" class="btn btn-danger w-100">
                                    <i class="fas fa-trash"></i> Eliminar Producto
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
